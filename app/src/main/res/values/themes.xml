<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FleetManagement" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black_background</item>
        <item name="colorPrimaryVariant">@color/blue_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black_secondary</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialog</item>
        <item name="snackbarStyle">@style/snackBarStyle</item>
<!--        <item name="snackbarButtonStyle">@style/snackBarButtonStyle</item>-->
        <!--        <item name="android:windowDisablePreview">true</item>-->
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation duration. -->
        <item name="windowSplashScreenBackground">@color/blue_primary</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/fleet_logo</item>
        <item name="windowSplashScreenAnimationDuration">@integer/duration_splash_activity</item>
        <item name="postSplashScreenTheme">@style/Theme.FleetManagement</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <!-- Set the profile image to make it crop. -->
        <item name="cornerSize">50%</item>
    </style>

    <style name="largeLogo">
        <item name="android:layout_width">@dimen/_200sdp</item>
        <item name="android:layout_height">@dimen/_200sdp</item>
        <item name="android:contentDescription">@string/image_content</item>
        <item name="android:src">@mipmap/fleet_logo</item>
        <item name="android:layout_marginTop">@dimen/_50sdp</item>
    </style>

    <style name="splashLogo">
        <item name="android:layout_width">@dimen/_200sdp</item>
        <item name="android:layout_height">@dimen/_200sdp</item>
        <item name="android:contentDescription">@string/image_content</item>
    </style>

    <style name="smallLogo">
        <item name="android:layout_width">@dimen/_100sdp</item>
        <item name="android:layout_height">@dimen/_100sdp</item>
        <item name="android:contentDescription">@string/image_content</item>
        <item name="android:src">@mipmap/fleet_logo</item>
        <item name="android:layout_marginTop">@dimen/_30sdp</item>

    </style>

    <style name="matchAndWrapContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="zeroAndWrapContent">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="wrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="wrapContent.textViewShowData">
        <item name="android:padding">@dimen/_5sdp</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="checkBoxPassword">
        <item name="android:background">@drawable/show_password</item>
        <item name="android:layout_marginEnd">@dimen/_30sdp</item>
        <item name="android:layout_marginTop">@dimen/_15sdp</item>
        <item name="android:button">@null</item>
        <item name="android:layout_width">@dimen/_25sdp</item>
        <item name="android:layout_height">@dimen/_25sdp</item>
    </style>
    <style name="matchAndWrapContent.editText">
        <item name="android:layout_marginStart">@dimen/_18sdp</item>
        <item name="android:layout_marginEnd">@dimen/_18sdp</item>
        <item name="android:layout_marginTop">@dimen/_15sdp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:background">@drawable/background_edittext</item>
    </style>
    <style name="zeroAndWrapContent.textView">
        <item name="android:layout_margin">@dimen/_20sdp</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/_20ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/background_textview</item>
    </style>
    <style name="matchAndWrapContent.editText.dialogDateOfBirth">
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:textColorHint">@android:color/black</item>
        <item name="android:padding">@dimen/_15sdp</item>
    </style>

    <style name="matchAndWrapContent.editText.dialogDateOfBirth.dialogText">
        <item name="android:drawablePadding">@dimen/_10sdp</item>
        <item name="android:drawableEnd">@drawable/ic_arrow_drop_down</item>

    </style>
    <style name="wrapContent.StyleTitleText">
        <item name="android:layout_marginStart">@dimen/_10sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="wrapContent.LogInOut">
        <item name="android:layout_margin">@dimen/_10sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_20ssp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:drawablePadding">@dimen/_20sdp</item>
    </style>

    <style name="zeroAndWrapContent.StyleHeaderTitle">
        <item name="android:layout_marginStart">@dimen/_18sdp</item>
        <item name="android:layout_marginTop">@dimen/_20sdp</item>
        <item name="android:layout_marginEnd">@dimen/_18sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_20ssp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="wrapContent.RecyclerViewHorizontal">
        <item name="android:layout_marginTop">@dimen/_18sdp</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="wrapContent.StyleLeftArrow">
        <item name="android:src">@drawable/ic_arrow_right</item>
        <item name="android:layout_marginTop">@dimen/_18sdp</item>
    </style>

    <style name="wrapContent.StyleRightArrow">
        <item name="android:src">@drawable/ic_arrow_left</item>
        <item name="android:layout_marginTop">@dimen/_18sdp</item>
        <item name="android:layout_marginStart">@dimen/_10sdp</item>
        <item name="android:layout_marginEnd">@dimen/_10sdp</item>
    </style>

    <style name="matchAndWrapContent.textInputLayout">
        <item name="android:textColorHint">@color/blue_primary</item>
        <item name="hintTextColor">@color/blue_primary</item>

        <item name="android:layout_marginBottom">@dimen/_18sdp</item>
    </style>
    <style name="zeroAndWrapContent.textInputLayout">
        <item name="android:textColorHint">@color/blue_primary</item>
        <item name="android:layout_marginBottom">@dimen/_18sdp</item>
    </style>

    <style name="matchAndWrapContent.CountryPickerView">
        <item name="android:textColorHint">@android:color/black</item>
        <item name="android:layout_margin">@dimen/_18sdp</item>
        <item name="android:alpha">0.5</item>
        <item name="android:padding">@dimen/_5sdp</item>
        <item name="android:background">@color/light_gray</item>
    </style>

    <style name="matchAndWrapContent.editText.Description">
        <item name="android:layout_height">@dimen/_200sdp</item>


    </style>

    <style name="wrapContent.radioButton">
        <item name="android:buttonTint">@color/blue_primary</item>
        <item name="android:textColor">@color/blue_primary</item>
        <item name="android:padding">@dimen/_10sdp</item>
    </style>
    <style name="button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/blue_primary</item>
    </style>

    <style name="wrapContent.textView">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="android:layout_marginStart">@dimen/_18sdp</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
    </style>

    <style name="wrapContent.textViewTimer">
        <item name="android:textColor">@color/blue_primary</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:layout_marginStart">@dimen/_18sdp</item>
        <item name="android:layout_marginTop">@dimen/_20sdp</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="wrapContent.textViewReset">
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:layout_marginStart">@dimen/_18sdp</item>
        <item name="android:layout_marginTop">@dimen/_20sdp</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:enabled">false</item>
        <item name="android:text">@string/label_resend</item>
    </style>
    <style name="CountryPickerStyle">
        <item name="android:textColorHint">@android:color/black</item>
        <item name="android:textColor">@color/blue_primary</item>
    </style>
    <!--    For change background for BottomSheetDialog-->
    <style name="BottomSheetDialog" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/background_bottom_sheet_dialog</item>
    </style>

    <style name="snackBarStyle" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:background">@drawable/custom_background_snack_bar</item>
    </style>
    <style name="snackBarButtonStyle" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:textColor">@android:color/black</item>
    </style>


</resources>






















